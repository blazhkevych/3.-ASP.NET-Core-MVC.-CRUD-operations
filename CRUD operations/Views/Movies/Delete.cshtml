@model CRUD_operations.Models.Movie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />

    <div class="table-container">
        <table id="MainTable" class="table">
            <tbody>
                <tr>
                    <td rowspan="6" class="poster-cell">
                        <img src="@Model.PosterUrl" alt="@Model.Title" class="poster-image" />
                    </td>
                    <td class="movie-title">
                        @Html.DisplayFor(modelItem => Model.Title)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Director)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Genre)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ReleaseYear)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@Model.Id">Details</a> 
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <form asp-action="Delete">
        <p>
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </p>
    </form>
</div>